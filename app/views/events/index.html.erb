<div class="bg-gray-50 min-h-screen py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        <% if params[:search].present? || params[:date].present? %>
          Search Results
        <% else %>
          Upcoming Events
        <% end %>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        <% if params[:search].present? || params[:date].present? %>
          <% results_count = @events.count %>
          Found <%= pluralize(results_count, 'event') %>
          <% if params[:search].present? %>
            for "<%= params[:search] %>"
          <% end %>
          <% if params[:date].present? %>
            on <%= Date.parse(params[:date]).strftime("%B %d, %Y") rescue params[:date] %>
          <% end %>
        <% else %>
          Discover amazing events happening near you. From tech conferences to music festivals, find your next experience.
        <% end %>
      </p>
    </div>

    <!-- Search Filters Bar -->
    <% if params[:search].present? || params[:date].present? %>
      <div class="mb-8">
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <div class="flex flex-wrap items-center gap-3">
            <span class="text-sm font-medium text-gray-700">Active filters:</span>
            
            <% if params[:search].present? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">
                Search: <%= params[:search] %>
                <%= link_to events_path(date: params[:date]), 
                    class: "ml-2 text-blue-600 hover:text-blue-800" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                <% end %>
              </span>
            <% end %>
            
            <% if params[:date].present? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">
                Date: <%= Date.parse(params[:date]).strftime("%b %d, %Y") rescue params[:date] %>
                <%= link_to events_path(search: params[:search]), 
                    class: "ml-2 text-green-600 hover:text-green-800" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                <% end %>
              </span>
            <% end %>
            
            <!-- Clear All Filters -->
            <div class="ml-auto">
              <%= link_to events_path, 
                  class: "text-sm text-gray-600 hover:text-gray-900 underline" do %>
                Clear all filters
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Events Grid -->
    <% if @events.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @events.each do |event| %>
          <%= link_to event_path(event), class: "group" do %>
            <div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:border-blue-300 transition-colors duration-200">
              <!-- Event Cover Image -->
              <div class="aspect-video bg-gray-100">
                <% if event.cover.attached? %>
                  <%= image_tag event.cover, 
                      alt: event.title,
                      class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center text-gray-400">
                    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Event Content -->
              <div class="p-6">
                <!-- Event Category & Date -->
                <div class="flex items-center justify-between mb-3">
                  <span class="inline-block bg-blue-600 text-white text-xs font-medium px-2.5 py-0.5 rounded-full uppercase tracking-wide">
                    <%= event.category&.humanize || 'Event' %>
                  </span>
                  <time class="text-sm text-gray-500 font-medium" datetime="<%= event.event_date.iso8601 %>">
                    <%= event.event_date.strftime("%b %d, %Y") %>
                  </time>
                </div>

                <!-- Event Title -->
                <h2 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                  <%= event.title %>
                </h2>

                <!-- Event Description -->
                <% if event.description.present? %>
                  <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                    <%= truncate(event.description, length: 120) %>
                  </p>
                <% end %>

                <!-- Event Details -->
                <div class="space-y-2">
                  <!-- Venue -->
                  <% if event.venue_name.present? %>
                    <div class="flex items-center text-sm text-gray-500">
                      <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                      <%= event.venue_name %>
                    </div>
                  <% end %>

                  <!-- Organizer -->
                  <div class="flex items-center text-sm text-gray-500">
                    <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    by <%= event.organizer.company_name %>
                  </div>
                </div>

                <!-- Event Footer -->
                <div class="flex items-center justify-between mt-6 pt-4 border-t border-gray-100">
                  <!-- Price -->
                  <div class="text-lg font-semibold text-gray-900">
                    <%= event.formatted_price %>
                  </div>

                  <!-- Availability -->
                  <div class="text-sm text-gray-500">
                    <% if event.sold_out? %>
                      <span class="text-red-600 font-medium">Sold Out</span>
                    <% elsif event.available_tickets %>
                      <%= pluralize(event.available_tickets, 'ticket') %> left
                    <% else %>
                      <%= pluralize(event.tickets_sold_count, 'ticket') %> sold
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <svg class="mx-auto h-24 w-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 8h6m-6 0v2a2 2 0 002 2h4a2 2 0 002-2v-2m-6 0V9a2 2 0 012-2h4a2 2 0 012 2v6"/>
        </svg>
        <h2 class="mt-6 text-2xl font-semibold text-gray-900">No events found</h2>
        <p class="mt-2 text-gray-600">Check back soon for upcoming events!</p>
      </div>
    <% end %>
  </div>
</div>