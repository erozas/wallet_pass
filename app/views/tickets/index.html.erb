<div class="bg-gray-50 min-h-screen py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">My Tickets</h1>
      <p class="text-gray-600">View and manage your purchased event tickets</p>
    </div>

    <!-- Tickets List -->
    <% if @tickets.any? %>
      <div class="space-y-6">
        <% @tickets.each do |ticket| %>
          <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
            <div class="p-6">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <!-- Event Title -->
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    <%= link_to ticket.event.title, event_path(ticket.event), 
                        class: "hover:text-blue-600 transition-colors" %>
                  </h3>
                  
                  <!-- Event Details -->
                  <div class="space-y-2 text-sm text-gray-600 mb-4">
                    <!-- Date -->
                    <div class="flex items-center">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 8h6m-6 0v2a2 2 0 002 2h4a2 2 0 002-2v-2m-6 0V9a2 2 0 012-2h4a2 2 0 012 2v6"/>
                      </svg>
                      <time datetime="<%= ticket.event.event_date.iso8601 %>">
                        <%= ticket.event.event_date.strftime("%A, %B %d, %Y at %l:%M %p") %>
                      </time>
                    </div>
                    
                    <!-- Venue -->
                    <% if ticket.event.venue_name.present? %>
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        <%= ticket.event.venue_name %>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Ticket Info -->
                  <div class="flex items-center space-x-6 text-sm">
                    <div>
                      <span class="text-gray-500">Ticket #:</span>
                      <span class="font-medium text-gray-900"><%= ticket.ticket_number %></span>
                    </div>
                    <div>
                      <span class="text-gray-500">Quantity:</span>
                      <span class="font-medium text-gray-900"><%= ticket.quantity %></span>
                    </div>
                    <div>
                      <span class="text-gray-500">Total:</span>
                      <span class="font-medium text-gray-900"><%= ticket.formatted_total_price %></span>
                    </div>
                  </div>
                </div>
                
                <!-- Status Badge -->
                <div class="ml-6 flex flex-col items-end space-y-3">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= ticket.status.humanize %>
                  </span>
                  
                  <!-- Actions -->
                  <div class="flex space-x-2">
                    <%= link_to "View Details", ticket_path(ticket), 
                        class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
                    <span class="text-gray-300">|</span>
                    <%= link_to "Get Pass", download_pass_ticket_path(ticket), 
                        class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <svg class="mx-auto h-24 w-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        <h2 class="mt-6 text-2xl font-semibold text-gray-900">No tickets yet</h2>
        <p class="mt-2 text-gray-600 mb-6">Start exploring events and get your first tickets!</p>
        <%= link_to "Browse Events", events_path, 
            class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
      </div>
    <% end %>
  </div>
</div>