<div class="bg-gray-50 min-h-screen py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-8" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to "My Tickets", tickets_path, class: "text-gray-500 hover:text-gray-700 text-sm font-medium transition-colors duration-200" %>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-900 text-sm font-medium" aria-current="page">
              <%= @ticket.ticket_number %>
            </span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Ticket Card -->
    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
      <!-- Ticket Header -->
      <div class="bg-gradient-to-r from-blue-500 to-blue-600 px-6 py-8 text-white">
        <div class="flex items-start justify-between">
          <div>
            <h1 class="text-2xl font-bold mb-2"><%= @ticket.event.title %></h1>
            <p class="text-blue-100 mb-4">
              <%= @ticket.event.event_date.strftime("%A, %B %d, %Y at %l:%M %p") %>
            </p>
            <div class="flex items-center space-x-4 text-sm">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= @ticket.event.venue_name %>
              </div>
            </div>
          </div>
          
          <div class="text-right">
            <div class="text-sm text-blue-100 mb-1">Status</div>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <%= @ticket.status.humanize %>
            </span>
          </div>
        </div>
      </div>

      <!-- Ticket Details -->
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Left Column: Ticket Info -->
          <div class="space-y-6">
            <div>
              <h2 class="text-lg font-semibold text-gray-900 mb-4">Ticket Information</h2>
              
              <div class="space-y-4">
                <div class="flex justify-between py-2 border-b border-gray-100">
                  <span class="text-gray-600">Ticket Number:</span>
                  <span class="font-medium text-gray-900"><%= @ticket.ticket_number %></span>
                </div>
                
                <div class="flex justify-between py-2 border-b border-gray-100">
                  <span class="text-gray-600">Quantity:</span>
                  <span class="font-medium text-gray-900"><%= @ticket.quantity %> ticket<%= 's' if @ticket.quantity > 1 %></span>
                </div>
                
                <div class="flex justify-between py-2 border-b border-gray-100">
                  <span class="text-gray-600">Total Price:</span>
                  <span class="font-medium text-gray-900"><%= @ticket.formatted_total_price %></span>
                </div>
                
                <div class="flex justify-between py-2 border-b border-gray-100">
                  <span class="text-gray-600">Purchase Date:</span>
                  <span class="font-medium text-gray-900">
                    <%= @ticket.purchased_at.strftime("%B %d, %Y at %l:%M %p") %>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column: Event Info -->
          <div class="space-y-6">
            <div>
              <h2 class="text-lg font-semibold text-gray-900 mb-4">Event Details</h2>
              
              <!-- Event Description -->
              <% if @ticket.event.description.present? %>
                <div class="mb-4">
                  <h3 class="text-sm font-medium text-gray-700 mb-2">About</h3>
                  <p class="text-gray-600 text-sm leading-relaxed">
                    <%= truncate(@ticket.event.description, length: 200) %>
                  </p>
                </div>
              <% end %>
              
              <!-- Venue Information -->
              <% if @ticket.event.venue_address.present? %>
                <div class="mb-4">
                  <h3 class="text-sm font-medium text-gray-700 mb-2">Venue Address</h3>
                  <p class="text-gray-600 text-sm">
                    <%= simple_format(@ticket.event.venue_address) %>
                  </p>
                </div>
              <% end %>
              
              <!-- Organizer -->
              <div>
                <h3 class="text-sm font-medium text-gray-700 mb-2">Organizer</h3>
                <p class="text-gray-600 text-sm">
                  <%= @ticket.event.organizer.company_name %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1 bg-black hover:bg-gray-800 text-white font-medium py-3 px-6 rounded-lg text-center transition-colors duration-200 flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
              </svg>
              Add to Apple Wallet
            </div>
            
            <%= link_to "View Event Details", event_path(@ticket.event), 
                class: "flex-1 border border-gray-300 text-gray-700 hover:text-gray-900 hover:bg-gray-50 font-medium py-3 px-6 rounded-lg text-center transition-colors duration-200" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>