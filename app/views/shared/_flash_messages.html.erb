<% if flash.any? %>
  <div class="w-full" data-controller="flash-messages" id="flash-messages">
    <% flash.each do |type, message| %>
      <% 
        case type.to_s
        when 'notice', 'success'
          bg_class = "bg-green-50 border-green-200"
          text_class = "text-green-800"
          icon_class = "text-green-400"
          icon_path = "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
        when 'alert', 'error'
          bg_class = "bg-red-50 border-red-200"
          text_class = "text-red-800"
          icon_class = "text-red-400"
          icon_path = "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"
        when 'warning'
          bg_class = "bg-yellow-50 border-yellow-200"
          text_class = "text-yellow-800"
          icon_class = "text-yellow-400"
          icon_path = "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"
        when 'info'
          bg_class = "bg-blue-50 border-blue-200"
          text_class = "text-blue-800"
          icon_class = "text-blue-400"
          icon_path = "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        else
          bg_class = "bg-gray-50 border-gray-200"
          text_class = "text-gray-800"
          icon_class = "text-gray-400"
          icon_path = "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        end
      %>
      
      <div class="flash-message w-full <%= bg_class %> border-b p-4 transition-opacity duration-300 ease-in-out" 
           data-flash-target="message" data-flash-type="<%= type %>">
        <div class="container mx-auto px-6">
          <div class="flex items-center justify-center">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 <%= icon_class %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_path %>"></path>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <p class="text-sm font-medium <%= text_class %>">
                <%= message %>
              </p>
            </div>
            <div class="ml-4 flex-shrink-0">
              <button class="inline-flex <%= text_class %> hover:opacity-75 focus:outline-none focus:ring-2 focus:ring-offset-2"
                      data-action="click->flash-messages#dismiss"
                      data-flash-target="closeButton">
                <span class="sr-only">Close</span>
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>