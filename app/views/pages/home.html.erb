<%= render "pages/home/meta_tags" %>

<!-- Hero Section -->
<section class="relative py-12">
  <!-- Full Opacity Background Image -->
  <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1496024840928-4c417adf211d?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');"></div>
  <!-- Dark gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70"></div>
  <!-- Additional color overlay -->
  <div class="absolute inset-0 bg-gradient-to-r from-blue-900/20 to-purple-900/20"></div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-3xl sm:text-4xl font-bold text-white mb-3 drop-shadow-lg">
      Find Your Next Event
    </h1>
    <p class="text-lg text-white/90 mb-6 drop-shadow-md">
      Discover concerts, workshops, conferences and more
    </p>
    
    <!-- Search Container with Better Background -->
    <div class="bg-black/20 backdrop-blur-sm rounded-3xl p-6">
      <!-- Search Form -->
      <div class="bg-white rounded-2xl shadow-xl p-4">
        <%= form_with url: events_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |f| %>
          <!-- Search Input -->
          <div class="md:col-span-2">
            <%= f.text_field :search, 
                placeholder: "Search events, artists, venues...", 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900 placeholder-gray-500" %>
          </div>
          
          <!-- Date Input -->
          <div>
            <%= f.date_field :date, 
                placeholder: "Any date", 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900" %>
          </div>
          
          <!-- Search Button -->
          <div>
            <%= f.submit "Search Events", 
                class: "w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-200 cursor-pointer shadow-lg hover:shadow-xl transform hover:scale-105" %>
          </div>
        <% end %>
      </div>
      
      <!-- Popular Searches -->
      <div class="mt-4 text-center">
        <span class="text-white/80 text-sm mr-3">Popular:</span>
        <a href="<%= events_path(search: 'music') %>" class="text-white hover:text-blue-200 text-sm mr-4 underline underline-offset-2">Music</a>
        <a href="<%= events_path(search: 'conference') %>" class="text-white hover:text-blue-200 text-sm mr-4 underline underline-offset-2">Conferences</a>
        <a href="<%= events_path(search: 'workshop') %>" class="text-white hover:text-blue-200 text-sm mr-4 underline underline-offset-2">Workshops</a>
        <a href="<%= events_path(search: 'networking') %>" class="text-white hover:text-blue-200 text-sm underline underline-offset-2">Networking</a>
      </div>
    </div>
  </div>
</section>

<!-- Featured Events Section -->
<section class="bg-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-8">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-1">
        Trending Events
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Discover amazing events happening near you. From concerts to conferences, 
        find your next unforgettable experience.
      </p>
    </div>

    <% if @featured_events.any? %>
      <!-- Events Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12" role="main" aria-label="Featured events">
        <% @featured_events.each do |event| %>
          <div class="group bg-white rounded-2xl overflow-hidden border border-gray-100 hover:border-gray-200 transition-all duration-300 hover:shadow-xl">
            <!-- Event Image -->
            <div class="relative aspect-video overflow-hidden bg-gray-100">
              <% if event.cover.attached? %>
                <%= image_tag event.cover, 
                    alt: event.title,
                    class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                  <svg class="w-16 h-16 text-white opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                  </svg>
                </div>
              <% end %>
              
              <!-- Category Badge -->
              <div class="absolute top-4 left-4">
                <span class="inline-block bg-white/90 backdrop-blur-sm text-gray-800 text-xs font-medium px-3 py-1 rounded-full uppercase tracking-wide">
                  <%= event.category&.humanize || 'Event' %>
                </span>
              </div>
              
              <!-- Price Badge -->
              <div class="absolute top-4 right-4">
                <span class="inline-block bg-blue-600 text-white text-sm font-bold px-3 py-1 rounded-full">
                  <%= event.formatted_price %>
                </span>
              </div>
            </div>
            
            <!-- Event Details -->
            <div class="p-6">
              <div class="mb-4">
                <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                  <%= link_to event.title, event_path(event), "aria-label": "View details for #{event.title}" %>
                </h3>
                <p class="text-gray-600 text-sm line-clamp-2">
                  <%= truncate(event.description, length: 120) if event.description.present? %>
                </p>
              </div>
              
              <!-- Event Meta -->
              <div class="space-y-2 mb-6">
                <div class="flex items-center text-sm text-gray-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 8h6m-6 0v2a2 2 0 002 2h4a2 2 0 002-2v-2m-6 0V9a2 2 0 012-2h4a2 2 0 012 2v6"/>
                  </svg>
                  <%= event.event_date.strftime("%A, %B %d, %Y") %>
                </div>
                <div class="flex items-center text-sm text-gray-500">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <%= event.event_date.strftime("%l:%M %p") %>
                </div>
                <% if event.venue_name.present? %>
                  <div class="flex items-center text-sm text-gray-500">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <%= event.venue_name %>
                  </div>
                <% end %>
              </div>
              
              <!-- CTA Button -->
              <%= link_to event_path(event), 
                  class: "block w-full bg-gray-900 hover:bg-gray-800 text-white text-center font-semibold py-3 px-4 rounded-lg transition-colors duration-200" do %>
                View Event Details
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- View All Events CTA -->
      <div class="text-center">
        <%= link_to events_path, 
            class: "inline-flex items-center px-8 py-4 text-lg font-semibold text-gray-900 hover:text-gray-700 border-2 border-gray-300 hover:border-gray-400 rounded-lg transition-colors duration-200 hover:bg-gray-50" do %>
          View All Events
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <svg class="mx-auto h-24 w-24 text-gray-300 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        <h3 class="text-2xl font-semibold text-gray-900 mb-4">No Events Yet</h3>
        <p class="text-gray-600 mb-8">Be the first to discover amazing events when they're added!</p>
        <%= link_to events_path, 
            class: "inline-flex items-center px-6 py-3 text-base font-medium text-blue-600 hover:text-blue-700" do %>
          Check for Events
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

